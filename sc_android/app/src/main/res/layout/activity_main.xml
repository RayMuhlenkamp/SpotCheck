<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ucsb.cs48.spotcheck.MainActivity">


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Welcome to SpotCheck!"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:onClick="goToRegisterActivity"
        android:text="Register" />

    <Button
        android:id="@+id/google_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:onClick="goToGoogleMapsActivity"
        android:text="Login with Google" />

    <Button
        android:id="@+id/facebook_login_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="goToGoogleMapsActivity"
        android:text="Login with Facebook" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Or:" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_login_button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Already registered? Login with e-mail here:" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_button"
        android:layout_alignStart="@+id/register_button"
        android:layout_below="@+id/login_text"
        android:layout_marginTop="38dp"
        android:onClick="goToLoginActivity"
        android:text="Login" />
</RelativeLayout>
